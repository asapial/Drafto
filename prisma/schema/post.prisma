model Post {
  id               Int        @id @default(autoincrement())
  post_title       String
  post_description String
  post_tags        String[]
  post_thumbnail   String?
  is_featured Boolean @default(false)
  published_at     DateTime
  created_at       DateTime   @default(now())
  updated_at       DateTime
  view_count       Int        @default(0)
  post_status      PostStatus @default(published)
  comments         Comment[]
  author_id        String

  @@index([id])
  @@map("posts")
}

enum PostStatus {
  published
  edited
  banned
}